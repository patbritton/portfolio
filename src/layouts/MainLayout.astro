---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <title>{title} | Patrick's Data Lab</title>

    <meta name="description" content={Astro.props.description || "Patrick's Data Engineering Portfolio and Blog."} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={Astro.props.description || "Interactive Data Analyst Portfolio"} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="https://patrick.mp.ls/images/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="image" content="https://patrick.mp.ls/images/og-image.png" />
    
    <link rel="alternate" type="application/rss+xml" title="Patrick's Data Lab" href="/rss.xml" />
  </head>
  
  <body>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>