---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---

<html lang="en">
<meta name="description" content={Astro.props.description || "Patrick's Data Engineering Portfolio and Blog."} />

<meta property="og:title" content={title} />
<meta property="og:description" content={Astro.props.description || "Interactive Data Analyst Portfolio"} />
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />

<meta property="og:image" content="https://patrick.mp.ls/images/og-image.png" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

<meta name="image" content="https://patrick.mp.ls/images/og-image.png" />
  <body>
    
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
    
  </body>
</html>