---
import MainLayout from './MainLayout.astro';
import { getCollection } from 'astro:content';
import SearchWidget from '../components/SearchWidget.jsx';
import '../styles/blog-layout.css';
const { frontmatter } = Astro.props;

// Helper function duplicated here to ensure the URL slug is correctly generated
const simpleSlugify = (text) => text.toLowerCase().replace(/ /g, '-').replace(/[^\w-]+/g, '');

// Fetch posts for sidebar navigation
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const date = new Date(frontmatter.pubDate);
const dateStr = date.toLocaleDateString('en-US', {
  year: 'numeric', month: 'long', day: 'numeric'
});
const pubTime = date.toISOString();
// Check for and format the update date
let modDateStr;
let modTime;

if (frontmatter.updatedDate) {
  const modDate = new Date(frontmatter.updatedDate);
  modDateStr = modDate.toLocaleDateString('en-US', {
    year: 'numeric', month: 'long', day: 'numeric'
  });
  modTime = modDate.toISOString();
}

// Pass necessary props to MainLayout for the SEO component
const title = frontmatter.title;
const description = frontmatter.description;
const canonicalPath = `/blog/${frontmatter.slug}/`;
const ogType = "article";
const tags = frontmatter.tags || [];
// Use updatedDate as modifiedTime for SEO if it exists, otherwise use pubDate
const finalModifiedTime = modTime || pubTime;
---

<MainLayout 
  title={title} 
  description={description} 
  canonicalUrl={canonicalPath} 
  type={ogType}
  tags={tags}
  publishedTime={pubTime}
  modifiedTime={finalModifiedTime}
>
  
  <div class="docs-grid">
    
    <article class="content-area">
      <header class="post-header">
        <span class="post-date">
          Published: {dateStr}
          {modDateStr && (
            // Display "Updated" label only if updatedDate exists
          
            <span style={{marginLeft: '1rem', color: '#64748b'}}>Updated: {modDateStr}</span>
          )}
        </span>
        <h1>{frontmatter.title}</h1>
        
        <div class="tags">
          {frontmatter.tags && frontmatter.tags.map(tag => (
            <a href={`/tags/${simpleSlugify(tag)}`} class="tag">#{tag}</a>
          ))}
        </div>
    
      </header>

      <hr class="divider" />

      <div class="prose">
        <slot />
      </div>
    </article>

    <aside class="sidebar">
      <div class="sidebar-inner">
        <SearchWidget client:load posts={allPosts} />
        <h3>Recent Updates</h3>
        <ul class="post-list">
          {sortedPosts.map(post => (
           
            <li>
              <a 
                href={`/blog/${post.id.replace('.md', '').toLowerCase()}`} 
                class={frontmatter.title === post.data.title ?
'active' : ''}
              >
                {post.data.title}
                <span class="date-small">{post.data.pubDate.toISOString().slice(0,10)}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
 
    </aside>

  </div>

</MainLayout>