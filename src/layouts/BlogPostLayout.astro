---
import MainLayout from './MainLayout.astro';
import { getCollection } from 'astro:content';
import SearchWidget from '../components/SearchWidget.jsx';
import '../styles/blog-layout.css'; 

const { frontmatter } = Astro.props;

// Fetch posts for sidebar navigation
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const dateStr = new Date(frontmatter.pubDate).toLocaleDateString('en-US', {
  year: 'numeric', month: 'long', day: 'numeric'
});

// --- JSON-LD SCHEMA GENERATION (Top Script) ---
const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://patrick.mp.ls/blog/${frontmatter.slug}/` 
  },
  "headline": frontmatter.title,
  "description": frontmatter.description,
  "image": "https://patrick.mp.ls/images/og-image.png",
  "author": {
    "@type": "Person",
    "name": "Patrick Britton"
  },
  "datePublished": frontmatter.pubDate.toISOString(),
  "dateModified": frontmatter.pubDate.toISOString()
};
// --- END SCHEMA GENERATION ---
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />

<MainLayout title={frontmatter.title}>
  
  <div class="docs-grid">
    
    <article class="content-area">
      <header class="post-header">
        <span class="post-date">{dateStr}</span>
        <h1>{frontmatter.title}</h1>
        
        <div class="tags">
          {frontmatter.tags && frontmatter.tags.map(tag => (
            <a href={`/tags/${tag}`} class="tag">#{tag}</a>
          ))}
        </div>
      </header>

      <hr class="divider" />

      <div class="prose">
        <slot />
      </div>
    </article>

    <aside class="sidebar">
      <div class="sidebar-inner">
        <SearchWidget client:load posts={allPosts} />
        <h3>Recent Updates</h3>
        <ul class="post-list">
          {sortedPosts.map(post => (
            <li>
              <a 
                href={`/blog/${post.slug}`} 
                class={frontmatter.title === post.data.title ? 'active' : ''}
              >
                {post.data.title}
                <span class="date-small">{post.data.pubDate.toISOString().slice(0,10)}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </aside>

  </div>

</MainLayout>