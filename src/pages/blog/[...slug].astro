---
// CRITICAL: This is required in 'server' mode to build the HTML files.
export const prerender = true; 

import { getCollection } from 'astro:content';
import BlogPostLayout from '../../layouts/BlogPostLayout.astro';

// 1. Generate all valid blog URLs
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');

  // Map every entry to its full file path (slug)
  return blogEntries.map(entry => ({
    // This is the correct way to handle nested directories (e.g., 2025/11/post-name)
    params: { slug: entry.slug }, 
    props: { entry },
  }));
}

// 2. Retrieve data from props
const { entry } = Astro.props;

// CRITICAL CHECK: Send a clean 404 if the post is not found
if (!entry) {
  return Astro.redirect('/404', 404); 
}

// 3. Render content
const { Content } = await entry.render();
---

<BlogPostLayout frontmatter={entry.data}>
  <Content />
</BlogPostLayout>