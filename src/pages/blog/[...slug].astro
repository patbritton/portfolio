---
// CRITICAL: This is required in 'server' mode to build the HTML files.
export const prerender = true; 

import { getCollection } from 'astro:content';
import BlogPostLayout from '../../layouts/BlogPostLayout.astro';

// 1. Generate all valid blog URLs
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');

  // Map every entry to its full file path (slug)
  return blogEntries.map(entry => ({
    // The params.slug will now include the nested folders: 2025/11/post-name
    params: { slug: entry.slug }, 
    props: { entry },
  }));
}

// 2. Retrieve data from props
const { entry } = Astro.props;

// CRITICAL CHECK: If the entry is undefined (404), send a clean redirect
if (!entry) {
  return Astro.redirect('/404', 404); 
}

// 3. Render content
const { Content } = await entry.render();
---

<BlogPostLayout frontmatter={entry.data}>
  <Content />
</BlogPostLayout>