---
import MainLayout from '../layouts/MainLayout.astro';
import { MapPin, Mail, Github, Linkedin, Terminal, Database, Layout } from 'lucide-react';
export const prerender = true;
// Import the separate CSS file
import '../styles/about.css';

const skills = [
  { name: "Data Analysis", icon: Database, items: ["Python (Pandas/NumPy)", "SQL", "Excel", "Tableau"] },
  { name: "Web Engineering", icon: Layout, items: ["React", "Astro", "HTML/CSS", "Tailwind"] },
  { name: "DevOps & Tools", icon: Terminal, items: ["Git/GitHub", "Linux (Ubuntu)", "Nginx", "Cloudflare"] },
];
---

<MainLayout title="About Me">
  
  <div class="profile-header">
    <div class="profile-text">
      <h1>Hi, I'm Patrick.</h1>
      <h2 class="subtitle">Data Analyst & Full Stack Engineer based in <span class="highlight">Minneapolis</span>.</h2>
      <p class="bio">
        I bridge the gap between raw data and interactive user experiences. 
        While most analysts stop at a static report, I build full-stack applications 
        that let users explore the data themselves.
      </p>
      
      <div class="social-links">
        <a href="https://github.com/patbritton" target="_blank" class="btn-outline">
          <Github size={18} /> GitHub
        </a>
        <a href="mailto:patrick@mp.ls" class="btn-outline">
          <Mail size={18} /> Contact
        </a>
        <span class="location">
          <MapPin size={18} /> Minneapolis, MN
        </span>
      </div>
    </div>
    
    <div class="profile-image">
      <img src="https://github.com/patbritton.png" alt="Patrick Britton" />
    </div>
  </div>

  <hr />

  <section class="skills-section">
    <h3>Technical Stack</h3>
    <div class="skills-grid">
      {skills.map(category => (
        <div class="skill-card">
          <div class="skill-header">
            <category.icon size={24} color="#38bdf8" />
            <h4>{category.name}</h4>
          </div>
          <ul>
            {category.items.map(item => <li>{item}</li>)}
          </ul>
        </div>
      ))}
    </div>
  </section>

  <section class="timeline-section">
    <h3>Education & History</h3>
    
    <div class="timeline-item">
      <span class="year">Now</span>
      <div class="content">
        <h4>AAS, Business Data Analyst</h4>
        <span class="org">Anoka Technical College</span>
        <p>
          Focusing on data visualization, SQL, and business intelligence architectures.
          <br/>
          <span class="honor-tag">★ Phi Theta Kappa</span>
          <span class="honor-tag">★ Honors</span>
        </p>
      </div>
    </div>

    <div class="timeline-item">
      <span class="year">2025</span>
      <div class="content">
        <h4>Certificate in IT Support</h4>
        <span class="org">Anoka Technical College</span>
        <p>
          Technical systems administration and infrastructure support.
          <br/>
          <span class="honor-tag">★ Phi Theta Kappa</span>
          <span class="honor-tag">★ Honors</span>
        </p>
      </div>
    </div>

  </section>

</MainLayout>